{{ 'section-collection-tabs.css' | asset_url | stylesheet_tag }}

{%- assign collection_blocks = section.blocks | where: 'type', 'collection' -%}

<div class="collection-tabs collection-tabs--{{ section.id }}">
    <div class="page-width">
        <div class="collection-tabs--wrapper">
            {%- for block in collection_blocks -%}
                <div class="collection-tab {% if forloop.first %}collection-tab--active{% endif %}">
                    <a data-metatitle="{{ block.settings.collection.title | append: " â€” " | append: shop.name | escape }}" class="collection-tab__link link link--text full-unstyled-link uppercase" href="{{ block.settings.collection.url }}" alt="{{ block.settings.collection.title | append: ' Collection' }}" title="{{ block.settings.collection.title | append: ' Collection' }}">{{ block.settings.collection.title | escape }}</a>
                </div>
            {%- endfor -%}
        </div>
    </div>
</div>

